                android:id="@+id/Missing_Customer_Summary"
                android:textSize="15sp"
                android:textColor="?colorOnSurface"
                android:gravity="center"
                android:layout_marginStart="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?colorSurface"
            android:layout_marginBottom="5dp"
            android:id="@+id/layout16"
            android:divider="@drawable/divider_drawable"
            android:showDividers="end"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/Completed_Loan_Summary"
                android:id="@+id/Completed_Loan_Summary"
                android:textSize="15sp"
                android:textColor="?colorOnSurface"
                android:gravity="center"
                android:layout_marginStart="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?colorSurface"
            android:layout_marginBottom="5dp"
            android:id="@+id/layout17"
            android:divider="@drawable/divider_drawable"
            android:showDividers="end"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/Non_Performance_Loan_Report"
                android:id="@+id/Non_Performance_Loan_Report"
                android:textSize="15sp"
                android:textColor="?colorOnSurface"
                android:gravity="center"
                android:layout_marginStart="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?colorSurface"
            android:layout_marginBottom="5dp"
            android:id="@+id/layout18"
            android:divider="@drawable/divider_drawable"
            android:showDividers="end"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/Loan_Analysis"
                android:id="@+id/Loan_Analysis"
                android:textSize="15sp"
                android:textColor="?colorOnSurface"
                android:gravity="center"
                android:layout_marginStart="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?colorSurface"
            android:id="@+id/layout19"
            android:layout_marginBottom="30dp"
            android:divider="@drawable/divider_drawable"
            android:showDividers="end"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/Ledger_Report"
                android:id="@+id/Ledger_Report"
                android:textSize="15sp"
                android:textColor="?colorOnSurface"
                android:gravity="center"
                android:layout_marginStart="20dp"/>

        </LinearLayout>
    </LinearLayout>

    </ScrollView>
</RelativeLayout>